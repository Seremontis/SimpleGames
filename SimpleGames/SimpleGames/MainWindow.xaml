<Window x:Class="SimpleGames.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleGames"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#B0E868">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Grid.Column="1" Grid.Row="1" Style="{StaticResource ResourceKey=menuOption}" Click="Hangman_Click">Wisielec</Button>
        <Button Grid.Column="1" Grid.Row="2" Style="{StaticResource ResourceKey=menuOption}" Click="Pyramid_Click">Pyramida(13)</Button>
        <Button Grid.Column="1" Grid.Row="3" Style="{StaticResource ResourceKey=menuOption}" Click="Exit_Click">Wyjście</Button>
    </Grid>
</Window>
